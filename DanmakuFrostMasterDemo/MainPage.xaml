<Page
    x:Class="DanmakuFrostMasterDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button x:Name="_btnDemo1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Realtime Danmaku Demo" FontSize="40" Click="_btnDemo1_Click"/>
        <Button x:Name="_btnDemo2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Bilibili Danmaku Demo 1" FontSize="40" Click="_btnDemo2_Click"/>
        <Button x:Name="_btnDemo3" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Bilibili Danmaku Demo 2" FontSize="40" Click="_btnDemo3_Click"/>
        <Button x:Name="_btnDemo4" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Content="ASS Subtitle Demo" FontSize="40" Click="_btnDemo4_Click"/>
    </Grid>
</Page>
